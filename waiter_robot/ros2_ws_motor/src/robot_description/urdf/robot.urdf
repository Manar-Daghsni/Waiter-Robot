<robot name="robot_server" xmlns:xacro="http://ros.org/wiki/xacro">
 
  <!-- ============================ -->
  <!-- Base link -->
  <!-- ============================ -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.35 0.25 0.1"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="blue"/>
    </visual>
  </link>
 
  <!-- ============================ -->
  <!-- LIDAR -->
  <!-- ============================ -->
  <link name="laser">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="red"/>
    </visual>
  </link>
 
  <joint name="base_link_to_laser" type="fixed">
    <parent link="base_link"/>
    <child link="laser"/>
    <origin xyz="0 0 0.08" rpy="0 0 0"/>
  </joint>
 

  <!-- ============================ -->
  <!-- Ultrasonic Sensors -->
  <!-- ============================ -->
  <link name="ultrasonic_front">
    <visual>
      <geometry>
        <cylinder radius="0.01" length="0.02"/>
      </geometry>
      <material name="grey"/>
    </visual>
  </link>
  <joint name="base_link_to_ultrasonic_front" type="fixed">
    <parent link="base_link"/>
    <child link="ultrasonic_front"/>
    <origin xyz="0.25 0 0.05" rpy="0 0 0"/>  <!-- move to front edge of 0.5m chassis -->
  </joint>
 
  <link name="ultrasonic_back">
    <visual>
      <geometry>
        <cylinder radius="0.01" length="0.02"/>
      </geometry>
      <material name="grey"/>
    </visual>
  </link>
  <joint name="base_link_to_ultrasonic_back" type="fixed">
    <parent link="base_link"/>
    <child link="ultrasonic_back"/>
    <origin xyz="-0.25 0 0.05" rpy="0 0 0"/> <!-- move to back edge of 0.5m chassis -->
  </joint>
 
</robot>



